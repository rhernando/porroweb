= form_for @porra do |f|
  -if @porra.errors.any?
    #error_explanation
      %h2= "#{pluralize(@porra.errors.count, "error")} prohibited this porra from being saved:"
      %ul
        - @porra.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :importe
    = f.text_field :importe
  .field
    = f.label :descripcion
    = f.text_field :descripcion
  .field
    = f.label :fecha_inicio
    = f.date_select :fecha_inicio
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :num_equipos
    = f.text_field :num_equipos
  .field
    = f.label :num_jugadores
    = f.text_field :num_jugadores
  .field
    = f.label :max_val_equipos
    = f.text_field :max_val_equipos
  .field
    = f.label :max_val_jugadores
    = f.text_field :max_val_jugadores
  .actions
    = f.submit 'Save'
