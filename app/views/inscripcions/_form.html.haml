= form_for @inscripcion do |f|
  -if @inscripcion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inscripcion.errors.count, "error")} prohibited this inscripcion from being saved:"
      %ul
        - @inscripcion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :porra_id
    = f.text_field :porra_id
  .field
    = f.label :usuario_id
    = f.text_field :usuario_id
  .field
    = f.label :fecha
    = f.date_select :fecha
  .field
    = f.label :pagado
    = f.check_box :pagado
  .actions
    = f.submit 'Save'
