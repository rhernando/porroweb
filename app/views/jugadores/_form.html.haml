= form_for @jugador do |f|
  -if @jugador.errors.any?
    #error_explanation
      %h2= "#{pluralize(@jugador.errors.count, "error")} prohibited this jugador from being saved:"
      %ul
        - @jugador.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre

  equipo:
  = f.collection_select :equipo_id, Equipo.all, :id, :nombre

  .actions
    = f.submit 'Save'
