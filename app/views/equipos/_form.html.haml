= form_for @equipo do |f|
  -if @equipo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@equipo.errors.count, "error")} prohibited this equipo from being saved:"
      %ul
        - @equipo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :tipo
    = f.text_field :tipo
  .field
    = f.label :equipo
  .field
    = f.label :nombre_imagen
    = f.text_field :nombre_imagen

  porrA:
  = f.collection_select :porra_id, Porra.all, :id, :titulo

  .actions
    = f.submit 'Save'
